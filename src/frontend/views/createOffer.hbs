{{ setVar "title" "Angebot erstellen" }}
{{> topInclude }}
<div class="container">
    <h2>Angebot erstellen</h2>
    <hr id="siteHeaderUnderline">
</div>
<div class="container">
    <div class="row">
        <form class="col l12" method="post" action="/">
            <div class="col l6">
                <h5>Tierart(en)</h5>
                {{#each animals}}
                    <div class="row">
                        <label>
                            <script>
                                let animalIdentifier = 'offerAnimal' + {{this.name}};
                            </script>
                            <input type="checkbox" name=animalIdentifier id=animalIdentifier>
                            <span>{{this.name}}</span>
                        </label>
                    </div>
                {{/each}}
            </div>
            <div class="col l6">
                <h5>Service(s)</h5>
                {{#each animals}}
                    <div class="row">
                        <label>
                            <script>
                                let serviceIdentifier = 'offerService' + {{this.name}};
                            </script>
                            <input type="checkbox" name=serviceIdentifier id=serviceIdentifier>
                            <span>{{this.name}}</span>
                        </label>
                    </div>
                {{/each}}
            </div>

            <div class="row">
                <div class="col l12 input-field">
                    <label for="offerDescription">Beschreibung des Angebots</label>
                    <textarea id="offerDescription" name="offerDescription" class="materialize-textarea"
                              maxlength="600"></textarea>
                    <span class="helper-text">Maximal 600 Zeichen</span>
                </div>
            </div>

            <input type="submit" class="btn" value="Angebot erstellen">
        </form>
    </div>
</div>
{{> bottomInclude }}
