{{setVar "title" "Registrierung"}}
{{> topInclude }}
<div class="container">
    <h2>Registrieren</h2>
    <hr id="siteHeaderUnderline">
</div>
<div class="container">
    <div class="row">
        <form class="registerForm col l12" method="post" action="/register/submit" name="registerForm" enctype="multipart/form-data">
            <div class="row">
                <div class="input-field col l6">
                    <input id="firstNameRegister" type="text" name="firstNameRegister"
                           class="validate">
                    <label for="firstNameRegister">Vorname</label>
                </div>
                <div class="input-field col l6">
                    <input id="lastNameRegister" type="text" name="lastNameRegister" class="validate">
                    <label for="lastNameRegister">Nachname</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col l6">
                    <label for="passwordRegister">Passwort</label>
                    <input id="passwordRegister" type="password" name="passwordRegister" class="validate">
                </div>
                <div class="input-field col l6">
                    <label for="birthDateRegister">Geburtstag</label>
                    <input type="text" id="birthDateRegister" name="birthDateRegister" class="datepicker">
                </div>
            </div>

            <div class="row">
                <div class="input-field col l6">
                    <label for="emailRegister">Email</label>
                    <input id="emailRegister" type="email" name="emailRegister" class="validate">
                </div>
                <div class="input-field col l6">
                    <label for="phoneNumberRegister">Telefonnummer</label>
                    <input id="phoneNumberRegister" name="phoneNumberRegister" type="tel">
                </div>
            </div>

            <div class="row">
                <div class="input-field col l12">
                    <input type="file" name="fileRegister" id="fileRegister">
                </div>
            </div>

            <div class="row">
                <div class="input-field col l12">
                    <label for="descriptionRegister">Kurzbeschreibung</label>
                    <textarea id="descriptionRegister" name="descriptionRegister" class="materialize-textarea"
                              maxlength="600"></textarea>
                    <span class="helper-text">Maximal 400 Zeichen</span>
                </div>
            </div>

            <input class="btn" id="registerButton" type="submit" value="Registrieren" style="background-color: #084177">
        </form>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        let elems = document.querySelectorAll('.datepicker');
        let options;
        let instances = M.Datepicker.init(elems, options);
    });</script>
{{> bottomInclude }}
