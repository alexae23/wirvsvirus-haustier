<div class="filter-group">
    <form class="filterForm" method="get" action="/searchHelper" >
        <div class="column filterGroup">
            <!-- Service -->
            <div class="row">
                <label  for="service">Service</label>
                <select id="service" name="service">
                    {{#each services}}
                        <option value="{{this.name}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="row">
                <!--//tierart -->
                <label for="species">Art</label>
                <select class="filterDropDowns" id="species" name="species">
                    {{#each animals}}
                        <option value="{{this.name}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
            <!-- Erfahrung -->
            <div class="row">
                <label></label>
                <!-- TODO-->
            </div>
            <!-- radius (suchkreis) -->
            <div class="row filterGroup">
                <label for="PLZ">Postleitzahl:</label>
                <input class="col l12 xl12 s12" name="PLZ" type="text" placeholder="Ihre PLZ..."
                       pattern="^(([1-9]{1}[0-9]{4})|([0-9]{1}[1-9]{1}[0-9]{3}))$" onchange="handlePLZ(this);">
            </div>
            <div class="row filterGroup">
                <select class="sc-input col l12 xl12 s12" data-test="zipRadius" name="distance">
                    <option selected="" value="null">Umkreis</option>
                    <option value="1">1 km</option>
                    <option value="2">2 km</option>
                    <option value="5">5 km</option>
                    <option value="10">10 km</option>
                    <option value="15">15 km</option>
                    <option value="20">20 km</option>
                    <option value="25">25 km</option>
                    <option value="30">30 km</option>
                    <option value="40">40 km</option>
                </select>
            </div>
            <!-- Alter -->
            <div class="row filterGroup">
                <label for="age">Alter:</label><br>
                <input class="col l6 xl6 s6" type="number" id="begin" name="begin" min="18" max="98"
                       placeholder="Anfang"
                       pattern="[0-9]{2}" onchange="handleChange(this);">
                <input class="col l6 xl6 s6" type="number" id="end" name="end" min="19" max="99" placeholder="Ende"
                       pattern="[0-9]{2}0" onchange="handleChange(this);">
            </div>

            <!-- Geschlecht -->
            <div class="row">
                <div class="">
                    <label for="age">Geschlecht:</label><br>
                    <select id="gender" name="gender">
                        <option value="male">MÃ¤nnlich</option>
                        <option value="female">Weiblich</option>
                        <option value="divers">Divers</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row  center-align">
            <button class="row s12 l12 xl12 filter btn-large waves-effect waves-light" type="submit"
                    name="action">Submit
                <i class="material-icons right">search</i>
            </button>
        </div>

    </form>
</div>
<script type="text/javascript" src="assets/js/handleInputfield.js"></script>
<script type="text/javascript" src="assets/js/handlePLZ.js"></script>


