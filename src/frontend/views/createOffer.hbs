{{ setVar "title" "Angebot erstellen" }}
{{> topInclude }}
<div class="container">
    <h2>Angebot erstellen</h2>
    <hr id="siteHeaderUnderline">
</div>
<div class="container">
    <div class="row">
        <form class="col l12">
            <div class="col l6">
                <h5>Tierart(en)</h5>
                <div class="row">
                    <label>
                        <input type="checkbox" id="offerAnimalDog">
                        <span>Hunde</span>
                    </label>
                </div>
                <div class="row">
                    <label>
                        <input type="checkbox" id="offerAnimalCat">
                        <span>Katzen</span>
                    </label>
                </div>
                <div class="row">
                    <label>
                        <input type="checkbox" id="offerAnimalFish">
                        <span>Fische</span>
                    </label>
                </div>
                <div class="row">
                    <label>
                        <input type="checkbox" id="offerAnimalHorse">
                        <span>Pferde</span>
                    </label>
                </div>
                <div class="row">
                    <label>
                        <input type="checkbox" id="offerAnimalMouse">
                        <span>Mäuse</span>
                    </label>
                </div>
                <div class="row">
                    <label>
                        <input type="checkbox" id="offerAnimalBird">
                        <span>Vögel</span>
                    </label>
                </div>
            </div>
            <div class="col l6">
                <h5>Service(s)</h5>
                <div class="row">
                    <label>
                        <input type="checkbox" id="offerServiceWalk">
                        <span>Gassi gehen</span>
                    </label>
                </div>
                <div class="row">
                    <label>
                        <input type="checkbox" id="offerServiceFood">
                        <span>Futter kaufen</span>
                    </label>
                </div>
                <div class="row">
                    <label>
                        <input type="checkbox" id="offerServiceShortInternal">
                        <span>Kurzfristige Betreuung (intern)</span>
                    </label>
                </div>
                <div class="row">
                    <label>
                        <input type="checkbox" id="offerServiceShortExternal">
                        <span>Kurzfristige Betreuung (extern)</span>
                    </label>
                </div>
                <div class="row">
                    <label>
                        <input type="checkbox" id="offerServiceLongInternal">
                        <span>Langfristige Betreuung (intern)</span>
                    </label>
                </div>
                <div class="row">
                    <label>
                        <input type="checkbox" id="offerServiceLongExternal">
                        <span>Langfristige Betreuung (extern)</span>
                    </label>
                </div>
            </div>

            <div class="row">
                <div class="col l12 input-field">
                    <label for="offerDescription">Beschreibung des Angebots</label>
                    <textarea id="offerDescription" class="materialize-textarea" maxlength="600"></textarea>
                    <span class="helper-text">Maximal 600 Zeichen</span>
                </div>
            </div>

            <input type="submit" class="btn" value="Angebot erstellen">
        </form>
    </div>
</div>
{{> bottomInclude }}
