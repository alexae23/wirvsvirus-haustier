<form class="filterForm" method="get" action="/searchOffer/filter">
    <!-- radius (suchkreis) -->
    <div class="row filterGroup">
        <label for="PLZ">Postleitzahl:</label>
        <input class="col l12 xl12 s12" name="PLZ" type="text" placeholder="Ihre PLZ..."
               pattern="^(([1-9]{1}[0-9]{4})|([0-9]{1}[1-9]{1}[0-9]{3}))$" onchange="handlePLZ(this);">
    </div>
    <div class="row filterGroup">
        <select name="radius" class="sc-input col l12 xl12 s12" data-test="zipRadius">
            <option selected="" value="null">Umkreis</option>
            <option value="1">1 km</option>
            <option value="2">2 km</option>
            <option value="5">5 km</option>
            <option value="10">10 km</option>
            <option value="15">15 km</option>
            <option value="20">20 km</option>
            <option value="25">25 km</option>
            <option value="30">30 km</option>
            <option value="40">40 km</option>
        </select>
    </div>
    <div class="row">
        <!--//tierart -->
        <label for="species">Art</label>
        <select class="filterDropDowns" id="species" name="species">
            {{#each animals}}
                <option value="{{this.name}}">{{this.name}}</option>
            {{/each}}
        </select>
    </div>
    <!-- Geschlecht Tier -->
    <div class="row">
        <label for="gender">Geschlecht des Tieres:</label>
        <select id="gender" name="gender">
            <option value="male">Männlich</option>
            <option value="female">Weiblich</option>
            <option value="divers">Männlich kastriert</option>
        </select>
    </div>
    <!--//Service -->
    <div class="row">
        <label for="service">Service</label>
        <select id="service" name="service">
            {{#each services}}
                <option value="{{this.name}}">{{this.name}}</option>
            {{/each}}
        </select>
    </div>
    <!-- Alter-->
    <div class="row filterGroup">
        <label for="age">Alter:</label><br>
        <input name="agestart" class="col l6 xl6 s6" type="number" id="end" name="end" min="0" max="24" placeholder="Anfang"
               pattern="[0-9]{3}0" onchange="handleChange(this);">
        <input name="ageend" class="col l6 xl6 s6" type="number" id="end" name="end" min="1" max="25" placeholder="Ende"
               pattern="[0-9]{3}0" onchange="handleChange(this);">
    </div>
    <!-- Rasse -->
   <!-- <div class="row">

        <label for="breed">Rasse</label>
        <select name="breed" class="filterDropDowns" id="breed">
            {{#each page.breed}}
                <option value="{{this.uuid}}">{{this.name}}</option>
            {{/each}}
        </select>
    </div>-->

    <!-- Groesse -->

    <div class="row filterGroup">
        <label for="age">Größe(in cm):</label><br>
        <input name="heightstart" class="col l6 xl6 s6" type="number" id="end" name="end" min="0" max="149" placeholder="Anfang"
               pattern="[0-9]{3}" onchange="handleChange(this);">
        <input name="heightend" class="col l6 xl6 s6" type="number" id="end" name="end" min="1" max="150" placeholder="Ende"
               pattern="[0-9]{3}" onchange="handleChange(this);">
    </div>

    <!-- Gewicht -->
    <div class="row filterGroup">
        <label for="age">Gewicht:</label><br>
        <input name="weightstart" class="col l6 xl6 s6" type="number" id="end" name="end" min="0" max="98" placeholder="Anfang"
               pattern="[0-9]{2}" onchange="handleChange(this);">
        <input name="weightend" class="col l6 xl6 s6" type="number" id="end" name="end" min="1" max="99" placeholder="Ende"
               pattern="[0-9]{2}" onchange="handleChange(this);">
    </div>

    <div class="row  center-align">
        <button class="row s12 l12 xl12 filter center-align btn-large waves-effect waves-light" type="submit" name="action">Submit
            <i class="material-icons right">search</i>
        </button>
    </div>

</form>
<script type="text/javascript" src="assets/js/handleInputfield.js"></script>
<script type="text/javascript" src="assets/js/handlePLZ.js"></script>


