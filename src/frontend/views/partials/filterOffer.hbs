<form class="filterForm">
    <!-- radius (suchkreis) -->
    <div class="row filterGroup">
        <label>Radius:</label>
        <select class="sc-input" data-test="zipRadius">
            <option selected="" value="null">Umkreis</option>
            <option value="1">1 km</option>
            <option value="2">2 km</option>
            <option value="5">5 km</option>
            <option value="10">10 km</option>
            <option value="15">15 km</option>
            <option value="20">20 km</option>
            <option value="25">25 km</option>
            <option value="30">30 km</option>
            <option value="40">40 km</option>
        </select>
    </div>
    <div class="row">
        <!--//tierart -->
        <label for="species">Art</label>
        <select class="filterDropDowns" id="species" name="species">
            {{#each animals}}
                <option value="{{this.name}}">{{this.name}}</option>
            {{/each}}
        </select>
    </div>
    <!-- Geschlecht Tier -->
    <div class="row">
        <label for="gender">Geschlecht des Tieres:</label>
        <select id="gender">
            <option value="male">Männlich</option>
            <option value="female">Weiblich</option>
            <option value="divers">Männlich kastriert</option>
        </select>
    </div>
    <!--//Service -->
    <div class="row">
        <label for="service">Service</label>
        <select id="service" name="service">
            {{#each services}}
                <option value="{{this.name}}">{{this.name}}</option>
            {{/each}}
        </select>
    </div>
    <!-- Alter-->
    <div class="row filterGroup">
        <label for="age">Alter:</label><br>
        <input class="col l6 xl6 s6" type="number" id="end" name="end" min="0" max="24" placeholder="Anfang"
               pattern="[0-9]{3}0" onchange="handleChange(this,0,24);">
        <input class="col l6 xl6 s6" type="number" id="end" name="end" min="1" max="25" placeholder="Ende"
               pattern="[0-9]{3}0" onchange="handleChange(this,1,25);">
    </div>
    <!-- Rasse -->
    <div class="row">

        <label for="breed">Rasse</label>
        <select class="filterDropDowns" id="breed">
            {{#each page.breed}}
                <option value="{{this.uuid}}">{{this.name}}</option>
            {{/each}}
        </select>
    </div>
    <!-- Weitere Filter -->

    <!-- Groesse -->

    <div class="row filterGroup">
        <label for="age">Größe(in cm):</label><br>
        <input class="col l6 xl6 s6" type="number" id="end" name="end" min="0" max="149" placeholder="Anfang"
               pattern="[0-9]{3}" onchange="handleChange(this);">
        <input class="col l6 xl6 s6" type="number" id="end" name="end" min="1" max="150" placeholder="Ende"
               pattern="[0-9]{3}" onchange="handleChange(this);">
    </div>

    <!-- Gewicht -->
    <div class="row filterGroup">
        <label for="age">Gewicht:</label><br>
        <input class="col l6 xl6 s6" type="number" id="end" name="end" min="0" max="98" placeholder="Anfang"
               pattern="[0-9]{2}" onchange="handleChange(this);">
        <input class="col l6 xl6 s6" type="number" id="end" name="end" min="1" max="99" placeholder="Ende"
               pattern="[0-9]{2}" onchange="handleChange(this);">
    </div>

    <!-- Dringlichkeit -->
    <div class="row ">
        <label for="urgency">Dringlichkeit:</label>
        <p>
            <label>
                <input class="with-gap" name="urgency" type="radio" checked/>
                <span>Benötigt</span>
            </label>
        </p>
        <p>
            <label>
                <input class="with-gap" name="urgency" type="radio" checked/>
                <span>Freiwillig</span>
            </label>
        </p>
    </div>

    <div class="row">
    </div>


</form>
<script type="text/javascript"  src="assets/js/handleInputfield.js"></script>


